---
import '@/styles/global.css'
import BaseLayout from '@/layouts/BaseLayout.astro'
import ContactLayout from '@/layouts/ContactLayout.astro'
import { Header } from '@/components/Header.tsx'
import ContactUs from '@/components/contact/contact-us/$section.astro'
import OurOffices from '@/components/contact/our-offices/$section.astro'
import FooterAlt from '@/components/Footer-Alt.astro'
---

<BaseLayout
  title="GrowthOps Asia"
  description="This is the landing page of GrowthOps Asia"
>
  <Header client:load />
  <ContactLayout>
    <ContactUs slot="contact-us" />
    <OurOffices slot="our-offices" />
  </ContactLayout>
  <FooterAlt />
</BaseLayout>
